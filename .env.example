# Server Configuration
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
DEBUG=False
PROJECT_NAME=MCP Server
MAX_WORKERS=4

# Database Configuration
SQLITE_DB_PATH=/app/data/database.db
DATABASE_URL=sqlite:///data/database.db

# API Configuration
API_V1_STR=/api/v1
API_KEY=your_api_key_here
RATE_LIMIT=100

# AI Configuration
AIDER_PATH=/usr/local/bin/aider
AIDER_MODEL=gpt-4
AIDER_TEMPERATURE=0.7
AIDER_MAX_TOKENS=2000
AIDER_API_KEY=your_openai_api_key_here
AIDER_COMMIT_MESSAGE=AI-assisted code changes

# Security Configuration
CORS_ORIGINS=["https://mcp-coder.consulting.sa","http://localhost:3000","http://localhost:8000"]

# Monitoring Configuration
LOG_LEVEL=INFO
ENABLE_METRICS=true

# Deployment Configuration
DEPLOY_TOKEN=your_deploy_token_here

# MCP Configuration
MCP_SERVER_NAME=primary
MCP_SERVER_ROLE=master
MCP_MAX_AGENTS=10
MCP_AGENT_TIMEOUT=300

# Aider User Configuration
AIDER_USER=aider_user
AIDER_PASSWORD=your_secure_password
AIDER_PERMISSIONS=["read","write","execute"]
